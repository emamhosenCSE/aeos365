APP_NAME="Aero HRM"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

PHP LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=aero_hrm
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# HRM Module Configuration
HRM_MODULE_ENABLED=true
HRM_EMPLOYEE_CODE_PREFIX=EMP
HRM_EMPLOYEE_CODE_LENGTH=6
HRM_PROBATION_PERIOD=90

# Attendance Settings
HRM_ATTENDANCE_MANUAL=true
HRM_ATTENDANCE_QR=true
HRM_ATTENDANCE_GPS=true
HRM_ATTENDANCE_IP=true
HRM_ATTENDANCE_ROUTE=true
HRM_ATTENDANCE_GRACE_PERIOD=15
HRM_ATTENDANCE_HALF_DAY_HOURS=4
HRM_ATTENDANCE_FULL_DAY_HOURS=8
HRM_ATTENDANCE_OVERTIME_THRESHOLD=8

# Leave Settings
HRM_LEAVE_REQUIRE_APPROVAL=true
HRM_LEAVE_APPROVAL_LEVELS=1
HRM_LEAVE_MAX_CONSECUTIVE_DAYS=30
HRM_LEAVE_ADVANCE_NOTICE_DAYS=3
HRM_LEAVE_COUNT_WEEKENDS=false
HRM_LEAVE_COUNT_HOLIDAYS=false
HRM_LEAVE_ANNUAL=15
HRM_LEAVE_SICK=10
HRM_LEAVE_CASUAL=7

# Payroll Settings
HRM_PAYROLL_CURRENCY=USD
HRM_PAYROLL_FREQUENCY=monthly
HRM_PAYROLL_PAYMENT_DAY=1
HRM_PAYROLL_ENABLE_TAX=true
HRM_PAYROLL_TAX_METHOD=progressive
HRM_PAYROLL_ENABLE_PF=true
HRM_PAYROLL_ENABLE_ESI=true

# Document Management
HRM_DOCUMENT_MAX_SIZE=10

# Performance Management
HRM_PERFORMANCE_ENABLED=true
HRM_PERFORMANCE_REVIEW_FREQUENCY=yearly

# Notifications
HRM_NOTIFY_EMPLOYEE_CREATED=true
HRM_NOTIFY_LEAVE_REQUESTED=true
HRM_NOTIFY_LEAVE_APPROVED=true
HRM_NOTIFY_ATTENDANCE_MARKED=false
HRM_NOTIFY_PAYROLL_GENERATED=true

# Integrations
HRM_INTEGRATION_BIOMETRIC=false
HRM_INTEGRATION_GOOGLE_CALENDAR=false
HRM_INTEGRATION_SLACK=false
