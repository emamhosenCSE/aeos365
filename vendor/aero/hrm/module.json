{
  "name": "aero-hrm",
  "short_name": "hrm",
  "version": "1.0.0",
  "description": "Aero Human Resource Management Module",
  "namespace": "Aero\\Hrm",
  "category": "business",
  "providers": [
    "Aero\\Hrm\\AeroHrmServiceProvider"
  ],
  "dependencies": {
    "aero-core": "^1.0"
  },
  "frontend": {
    "pages": "resources/js/Pages",
    "components": "resources/js/Components",
    "pagePrefix": "Hrm"
  },
  "exports": {
    "components": [
      "EmployeeCard",
      "LeaveCalendar",
      "AttendanceWidget"
    ],
    "hooks": [
      "useEmployee",
      "useLeaveBalance"
    ]
  },
  "routes": {
    "tenant": "routes/tenant.php",
    "web": "routes/web.php",
    "api": "routes/api.php"
  },
  "middleware": [
    "web",
    "auth"
  ],
  "migrations": {
    "path": "database/migrations"
  },
  "permissions": [
    "hrm.employees.view",
    "hrm.employees.create",
    "hrm.employees.edit",
    "hrm.employees.delete",
    "hrm.attendance.view",
    "hrm.attendance.manage",
    "hrm.leave.view",
    "hrm.leave.approve",
    "hrm.payroll.view",
    "hrm.payroll.process"
  ],
  "config": {
    "enabled": true,
    "auto_register": true,
    "priority": 10
  }
}
