{
    "name": "aero/platform",
    "description": "Aero Platform Package",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "aero",
        "core",
        "laravel",
        "multi-tenancy",
        "authentication",
        "authorization",
        "rbac",
        "module-system"
    ],
    "authors": [
        {
            "name": "Aero Team",
            "email": "support@aerosuite.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "aero/core": "*",
        "laravel/framework": "^11.0|^12.0",
        "stancl/tenancy": "^3.9",
        "spatie/laravel-permission": "^6.20",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/fortify": "^1.24",
        "laravel/sanctum": "^4.0",
        "laravel/cashier": "^15.0",
        "spatie/laravel-medialibrary": "^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "laravel/boost": "*",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Aero\\Platform\\": "src/",
            "Aero\\Platform\\Database\\Factories\\": "database/factories/",
            "Aero\\Platform\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aero\\Platform\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"if (file_exists('artisan')) { echo '\\nℹ️  Publish platform assets: php artisan vendor:publish --tag=aero-platform-assets --force' . PHP_EOL; }\""
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aero\\Platform\\AeroPlatformServiceProvider"
            ],
            "aliases": {
                "AeroPlatform": "Aero\\Platform\\Facades\\Platform"
            }
        },
        "aero": {
            "package": "platform",
            "version": "1.0.0",
            "category": "landlord",
            "description": "Platform management package providing multi-tenancy orchestration, landlord authentication, and platform administration",
            "has-assets": true,
            "build-command": "php artisan aero:build-assets"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
