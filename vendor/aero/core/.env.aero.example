/*
 * Environment Configuration for Aero System
 * 
 * Copy this file to .env and configure based on your deployment mode.
 */

// ============================================================================
// APPLICATION MODE (CRITICAL)
// ============================================================================

// Set to 'saas' for multi-tenant SaaS deployment
// Set to 'standalone' for single-tenant CodeCanyon/standalone deployment
AERO_MODE=standalone

// ============================================================================
// TENANT CONFIGURATION (STANDALONE MODE)
// ============================================================================

// Default tenant ID for standalone mode
AERO_STANDALONE_TENANT_ID=1

// ============================================================================
// MODULE SYSTEM CONFIGURATION
// ============================================================================

// Enable runtime module loading (Standalone mode only)
// Set to true to allow ZIP module uploads without Composer
AERO_RUNTIME_LOADING=true

// Path to modules directory (relative to base_path)
AERO_MODULES_PATH=modules

// Enable module caching for better performance
AERO_CACHE_MODULES=true
AERO_CACHE_TTL=3600

// Enable auto-discovery of modules
AERO_AUTO_DISCOVERY=true

// ============================================================================
// PLATFORM CONFIGURATION (SAAS MODE ONLY)
// ============================================================================

// Enable aero-platform features (multi-tenancy, billing, etc.)
AERO_PLATFORM_ENABLED=false

// ============================================================================
// FEATURE MODULES
// ============================================================================

// Enable/disable individual modules
AERO_HRM_ENABLED=true
AERO_CRM_ENABLED=false
AERO_FINANCE_ENABLED=false
AERO_PROJECT_ENABLED=false
AERO_POS_ENABLED=false
AERO_IMS_ENABLED=false
AERO_SCM_ENABLED=false
AERO_DMS_ENABLED=false
AERO_QUALITY_ENABLED=false
AERO_COMPLIANCE_ENABLED=false

// ============================================================================
// DATABASE CONFIGURATION
// ============================================================================

// Tenant isolation strategy: 'database' or 'column'
AERO_TENANT_STRATEGY=column

// Auto-run migrations when modules are loaded
AERO_AUTO_MIGRATE=false

// ============================================================================
// FRONTEND CONFIGURATION
// ============================================================================

// Build mode: 'library' for standalone, 'bundle' for SaaS
AERO_BUILD_MODE=library

// Enable CDN for shared dependencies (React, etc.)
AERO_CDN_ENABLED=true

// Enable lazy loading of module components
AERO_LAZY_LOAD=true

// Preload specific modules (comma-separated)
AERO_PRELOAD_MODULES=

// ============================================================================
// SECURITY & PERFORMANCE
// ============================================================================

// Verify module signatures before loading
AERO_VERIFY_SIGNATURES=false

// Allowed module sources (* for all, comma-separated URLs for specific)
AERO_ALLOWED_SOURCES=*

// ============================================================================
// EXAMPLE CONFIGURATIONS
// ============================================================================

/*
 * SaaS MODE EXAMPLE:
 * ------------------
 * AERO_MODE=saas
 * AERO_PLATFORM_ENABLED=true
 * AERO_RUNTIME_LOADING=false
 * AERO_BUILD_MODE=bundle
 * 
 * STANDALONE MODE EXAMPLE:
 * ------------------------
 * AERO_MODE=standalone
 * AERO_PLATFORM_ENABLED=false
 * AERO_RUNTIME_LOADING=true
 * AERO_BUILD_MODE=library
 * AERO_STANDALONE_TENANT_ID=1
 */
